<div class="container-fluid">
  <div class="jumbotron">
    <h1>It's JAM time!</h1>
    <p class="subheading">YO.</p>
  </div>
</div>

<%= form_tag "/", class: "popular" do %>
  <%= submit_tag "Popular jams", class: "btn btn-default" %>
<% end %>
  
<%= form_tag "/", class: "form search" do %>
  <div class="form-group">
    <%= label_tag :artist %>
    <%= text_field_tag :artist, nil, 
    placeholder: "search...", class: "form-control" %>
  </div>

  <%= submit_tag "Search", class: "btn btn-default" %>
<% end %>
